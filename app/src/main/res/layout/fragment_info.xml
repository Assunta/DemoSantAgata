<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.oropallo.assunta.demosantagata.InfoFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/imageButtonInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/textViewTitleInfo"
            android:layout_alignParentStart="true"
            app:srcCompat="@drawable/googleg_standard_color_18" />

        <TextView
            android:id="@+id/textViewTitleInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/imageButtonInfo"
            android:text="TextView"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textViewDescriptionInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/textViewTitleInfo"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textViewTitleInfo"
            android:text="TextView"
            android:textSize="10sp" />
    </RelativeLayout>
</FrameLayout>
